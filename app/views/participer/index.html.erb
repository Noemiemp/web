<div class="container">
  <div class="row">
    <%= form_for @user, url: {action: "create"}, html: { :multipart=>true, class: "col-md-6 col-md-offset-3", style: "padding-top: 50px; font-size: 1.125em"} do |f| %>
        <% if @user.errors.any? %>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
        <% end %>
        <div class="form-group">
          <%= f.label :email, 'Votre email' %>
          <%= f.text_field :email, class: "form-control input-lg", :type => "email", :required => "required" %>
        </div>
        <div class="form-group">
          <%= f.label :job_title, 'Votre métier' %>
          <%= f.text_field :job_title, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.label :first_name, 'Votre prénom' %>
          <%= f.text_field :first_name, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <input id="user_questions_attributes_0_identifier" name="user[questions_attributes][0][identifier]" type="hidden" value="specifically" />
          <input id="user_questions_attributes_0_title" name="user[questions_attributes][0][title]" type="hidden" value="Que faites vous exactement ?" />
          <label for="user_questions_attributes_0_answer">Que faites-vous exactement ?</label>
          <textarea class="form-control input-lg" id="user_questions_attributes_0_answer" name="user[questions_attributes][0][answer]" rows="6"></textarea>
        </div>
        <div class="form-group">
          <label for="user_keyword_list">Quels sont les 5 mots clés qui vous viennent spontanément à l’esprit quand vous pensez à votre métier ?</label>
          <input class="form-control input-lg" id="user_keyword_list" name="user[keyword_list]" type="text" value="" />
        </div>
        <div class="form-group">
          <input id="user_questions_attributes_1_identifier" name="user[questions_attributes][1][identifier]" type="hidden" value="love_job" />
          <input id="user_questions_attributes_1_title" name="user[questions_attributes][1][title]" type="hidden" value="Au fond, qu'est ce qui fait que vous aimez votre métier ?" />
          <label for="user_questions_attributes_1_answer">Au fond, qu'est ce qui fait que vous aimez votre métier ?</label>
          <textarea class="form-control input-lg" id="user_questions_attributes_1_answer" name="user[questions_attributes][1][answer]" rows="6"></textarea>
        </div>
        <div class="form-group">
          <label for="photo">Votre photo !</label>
          <%= f.file_field :avatar %>
          <p class="help-block">C'est pour la galerie ;-) .</p>
          <p class="help-block">Vous pouvez également envoyer votre photo par email à l’adresse contact@bloomr.org</p>
        </div>
        <%= f.submit "Enregistrer", :class=>"btn btn-primary btn-block btn-lg", :style=>"margin-top: 25px"%>
    <% end %>
  </div>
</div>