- content_for :title, 'Connection au forum'
- content_for :hide_header, true
- content_for :hide_footer, true

#sso
  .center
    %h1.title Connecte-toi !
    = form_for(@bloomy, url: '/sso/login') do |f|
      - flash.each do |name, msg|
        = content_tag :div, msg, id: "flash_#{name}", style: 'margin: 30px auto'
      = f.email_field :email, placeholder: 'Ton adresse email', required: true, class: 'nice-input', autofocus: true
      = f.password_field :password, autocomplete: 'off', placeholder: 'Ton mot de passe', required: true, class: 'nice-input'
      = hidden_field_tag 'nonce', @nonce
      = hidden_field_tag 'query_string', @query_string

      = submit_tag "C'est parti !", class: 'crazy-btn'

    = link_to "(Oups ... j'ai oubli√© mon mot de passe)", new_password_path('bloomy'), class: 'link-center blue-under'
