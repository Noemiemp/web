.container
  .row
    .col-md-6.col-md-offset-3
      %h1 #{ current_user.email }

      = form_for current_user, url: me_path do |f|
        .form-group
          = f.label :email
          = f.email_field :email, class: 'form-control'
        - current_user.questions_to_display.sort_by(&:position).each do |question|
          .form-group.editable-group
            = f.fields_for :questions, question do |ff|
              = ff.label question.title
              = render 'toolbar'
              = ff.text_area :answer, col: 11, row: 20, class: 'form-control', class: 'form-control editor'
        %br
          = f.submit 'modifier'

