.container
  .row
    .col-md-6.col-md-offset-3
      %h2 Se connecter
      %br
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = devise_error_messages!
        - flash.each do |name, msg|
          = content_tag :div, msg, id: "flash_#{name}"

        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, class: 'form-control', required: true

        .form-group
          = f.label :password, 'Mot de passe'
          = f.password_field :password, autocomplete: "off", class: 'form-control', required: true

        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me, 'Se souvenir de moi'

        .actions
          = f.submit "Se connecter", class: 'form-control'

      %br
      = render "users/shared/links"
