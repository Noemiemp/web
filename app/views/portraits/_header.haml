.portrait_header{ class: "background-#{(@portrait.id) %22}", itemscope: '', itemtype: 'http://schema.org/Person' }
  = image_tag @portrait.avatar.url('thumb'), class: 'portrait-avatar', itemprop: 'image', alt: 'Photo de ' + @portrait.first_name
  %h3
    Hello ! Je m'appelle
    %span.portrait-name{itemprop: 'name'}= @portrait.first_name
  %h1
    Je suis
    %span.portrait-job-title{itemprop: 'jobTitle'}= @portrait.job_title
  .container.keywords
    .row
      .col-md-10
        .mark
        %p
          Mon m√©tier en #{@portrait.keyword_associations.length} mots
        %ul.portrait-keywords{itemprop: 'keywords'}
          - @portrait.keyword_associations.each do |keyword_association|
            - if keyword_association.keyword_popular?
              %li
                %a.portrait-keyword{ href: tag_path(keyword_association.keyword.tag) }
                  - keyword_association.keyword.tag[0] = keyword_association.keyword.tag[0].capitalize
                  = keyword_association.keyword.tag
            - else
              %li
                %span.portrait-keyword
                  - keyword_association.keyword.tag[0] = keyword_association.keyword.tag[0].capitalize
                  = keyword_association.keyword.tag
      .col-md-2
        .mark
        %p Partage mon profil
        %a.social-share-button.fb{ href: "https://www.facebook.com/sharer/sharer.php?u=#{portrait_url(@portrait)}", target: '_blank' }
          %img{src: image_path('icons/facebook.png')}
        %a.social-share-button{ href: "https://twitter.com/intent/tweet?url=#{portrait_url(@portrait)}", target: '_blank' }
          %img{src: image_path('icons/twitter.png')}
