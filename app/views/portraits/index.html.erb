<h1>Portraits</h1>

<div id="portraits_list" class="row">
  <% @portraits.each do |portrait| %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 portrait-item">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title portrait-job-title"><%= portrait.job_title %></h2>
        </div>

        <div class="panel-body">

          <div class="portrait-infos">
            <%= image_tag portrait.avatar.url("thumb"), :class => "portrait-avatar" %>
            <div class="portrait-infos-right">
              <h3 class="portrait-name"><%= portrait.first_name %></h3>
              <p class="portrait-location">
                <span class="glyphicon glyphicon-map-marker"></span>
                Paris
              </p>
            </div>
          </div>

          <p class="portrait-love-job"><%= truncate(portrait.answer_to('love_job'), :length => 120, :separator => " ") %></p>

          <ul class="portrait-keywords">
            <% portrait.keyword_list.each do |keyword| %>
                <li><%= keyword %></li>
            <% end %>
          </ul>

          <p class="portrait-specifically"><%= truncate(portrait.answer_to('specifically'), :length => 120, :separator => " ") %></p>

        </div>
      </div>
    </div>
  <% end %>
</div>