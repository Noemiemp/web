<% content_for :title, "Des professionnels passionnés parlent de leur métier" %>
<% content_for :og_title, "Bloomr - Des professionnels passionnés parlent de leur métier" %>
<% content_for :description, "Choisir un métier épanouissant grâce à une communauté de professionnels passionnés" %>
<% content_for :og_img_url, "http://res.cloudinary.com/hrscywv4p/image/upload/c_limit,f_auto,fl_progressive,h_1200,q_90,w_2000/v1/123077/7039448345_9741b31e11_k_rqcog0.jpg" %>
<div class="container-fluid">
  <ol class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
    <li class="active" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a itemprop="item" href="/">Galerie</a></li>
  </ol>

  <%= render "shared/catchup_phrase" %>

  <ul id="portraits_list" class="row">
    <% @portraits.each do |portrait| %>
        <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12" itemscope itemtype="http://schema.org/Person">
          <%= link_to(portrait_path(portrait), :itemprop => "url") do %>
              <div class="background-<%= (portrait.id) %22 %>">
                <%= image_tag portrait.avatar.url("thumb"), :class => "portrait-avatar", :width => "104px", :height => "104px", :itemprop => "image", :alt => "Photo de " + portrait.first_name  %>
                <div class="overlay">
                  <h3 class="portrait-infos-right portrait-name" itemprop="name"><%= portrait.first_name %></h3>
                  <h2 class="panel-title portrait-job-title" itemprop="jobTitle"><%= portrait.job_title %></h2>
                  <% if portrait.answer_to('love_job') %>
                      <blockquote class="portrait-love-job">
                        <%= truncate(raw(portrait.answer_to('love_job')), :length => 100, :separator => " ", :omission => "")  %> <span>(<span>...</span>)</span>
                      </blockquote>
                  <% end %>
                </div>
              </div>
          <% end %>
        </li>
    <% end %>
  </ul>

  <%= render "shared/catchup_phrase" %>

  <script>
      $(function(){
          var msnry = new Masonry("#portraits_list");
          imagesLoaded( "#portraits_list", function() {
              msnry.layout();
          });
      });
  </script>

</div>