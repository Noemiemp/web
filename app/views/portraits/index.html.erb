<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="active"><a href="/app/assets/images">Galerie</a></li>
  </ol>


  <ul id="portraits_list" class="row">
    <% @portraits.each do |portrait| %>
        <li class="col-lg-3 col-md-4 col-sm-6 col-xs-12 portrait-item">
          <%= link_to(portrait_path(portrait)) do %>
              <div class="background-<%= (portrait.id) %22 %>">
                <%= image_tag portrait.avatar.url("thumb"), :class => "portrait-avatar u-photo", :width => "104px", :height => "104px" %>
                <div class="overlay">
                  <h3 class="portrait-infos-right portrait-name p-given-name"><%= portrait.first_name %></h3>
                  <h2 class="panel-title portrait-job-title p-job-title"><%= portrait.job_title %></h2>
                  <% if portrait.answer_to('love_job') %>
                      <blockquote class="portrait-love-job">
                        <%= truncate(raw(portrait.answer_to('love_job')), :length => 100, :separator => " ", :omission => "")  %> <span>(<span>...</span>)</span>
                      </blockquote>
                  <% end %>
                </div>
              </div>
          <% end %>
        </li>
    <% end %>
  </ul>


  <script>
      $(function(){
          var msnry = new Masonry("#portraits_list");
          imagesLoaded( "#portraits_list", function() {
              msnry.layout();
          });
      });
  </script>

</div>